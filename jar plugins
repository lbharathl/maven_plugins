<build>
  <plugins>
    <plugin>
      <artifactId>maven-assembly-plugin</artifactId>
      <configuration>
        <archive>
          <manifest>
            <mainClass>com.bky.project1.App</mainClass>
          </manifest>
        </archive>
        <descriptorRefs>
          <descriptorRef>jar-with-dependencies</descriptorRef>
        </descriptorRefs>
      </configuration>
    </plugin>

<plugin>
<groupId>org.codehaus.mojo</groupId>
	<artifactId>exec-maven-plugin</artifactId>
	<version>1.6.0</version>
	<configuration>
	  <mainClass>com.bky.project1</mainClass>
	<arguments>
		<argument>-jar</argument>
		<argument>target/sampleapp-1.0-SNAPSHOT.jar</argument>
	</arguments>
	</configuration>
</plugin>
</plugins>
</build>
